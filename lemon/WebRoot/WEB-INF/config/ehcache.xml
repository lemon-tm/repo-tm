<?xml version="1.0" encoding="UTF-8"?>
<ehcache 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

	<diskStore path="${java.io.tmpdir}/${system.project_name}/cache" />
	
	<defaultCache maxElementsInMemory="1000" timeToIdleSeconds="3600" timeToLiveSeconds="3600" eternal="false" overflowToDisk="false" />
	
	<cache name="imgMsgList" maxElementsInMemory="1000" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	
</ehcache>